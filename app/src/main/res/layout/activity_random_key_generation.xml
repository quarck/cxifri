<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RandomKeyGenerationActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.RandomKeyGenerationActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:scaleType="fitCenter"
            android:src="@android:color/black" />

        <TextView
            android:id="@+id/textViewWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warning: after you hit 'save' you would not be able to see this QR code again" />

        <TextView
            android:id="@+id/textViewKeyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Key Name:" />

        <EditText
            android:id="@+id/editTextKeyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />


    </LinearLayout>

</ScrollView>

