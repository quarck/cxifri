<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:padding="0dp"
        android:text="@string/big_x"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <Button
        android:id="@+id/buttonReplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:padding="0dp"
        android:text="@string/big_r"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_alignBaseline="@id/buttonDelete"
        android:layout_toStartOf="@id/buttonDelete"
        />

    <TextView
        android:id="@+id/textViewKeyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@id/buttonReplace"
        android:ems="10"
        android:text="_key_name_placeholder_ some long long"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewKeyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@id/buttonReplace"
        android:layout_below="@id/textViewKeyName"
        android:ems="10"
        android:text="Some extra key details can be added here"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        tools:ignore="HardcodedText" />

</RelativeLayout>