<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text=""
            android:hint="@string/hint_privatemessage"
            />

        <Button
            android:id="@+id/buttonKeySelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="key: choose"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            style="?android:attr/buttonStyle"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword|textNoSuggestions"
            android:hint="@string/hint_password"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textViewError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:text="_key_name_placeholder_ some long long"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:ignore="HardcodedText"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/buttonEncrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/encrypt"
                android:layout_margin="5sp"
                android:layout_gravity="center"
                style="?android:attr/buttonStyle"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/buttonDecrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/decrypt"
                android:layout_margin="5sp"
                android:layout_gravity="center"
                style="?android:attr/buttonStyle"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/buttonShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:layout_margin="5sp"
                android:layout_gravity="center"
                style="?android:attr/buttonStyle"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/copy"
                android:layout_margin="5sp"
                android:layout_gravity="center"
                style="?android:attr/buttonStyle"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/buttonPaste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paste"
                android:layout_margin="5sp"
                android:layout_gravity="center"
                style="?android:attr/buttonStyle"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:layout_margin="5sp"
                android:layout_gravity="center"
                style="?android:attr/buttonStyle"
                android:layout_weight="1"
                />

        </LinearLayout>



        <Button
            android:id="@+id/buttonManageKeys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_keys"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            style="?android:attr/buttonStyle"
            />

    </LinearLayout>

</ScrollView>