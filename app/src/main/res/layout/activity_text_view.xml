<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextViewActivity"
    android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textViewAuthStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="_key_name_placeholder_ some long long"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:ignore="HardcodedText"
            android:background="#ff77ff77"/>

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:autoLink="web|email|phone|map"
            android:ems="10"
            android:text="_key_name_placeholder_ some long long  some long long  some long\nlong  some long long\nsome long long  some long long "
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textIsSelectable="true
"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonReply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reply"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                style="?android:attr/buttonStyle"
                />

            <Button
                android:id="@+id/buttonQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quote"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                style="?android:attr/buttonStyle"
                />

            <Button
                android:id="@+id/buttonCopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/copy"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                style="?android:attr/buttonStyle"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>